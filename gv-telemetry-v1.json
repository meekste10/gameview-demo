{
  "$id": "https://gameview.ar/schema/gv-telemetry-v1.json",
  "title": "GameView Telemetry Schema v1",
  "type": "object",
  "required": ["schema", "fps", "field_cs", "frames"],
  "properties": {
    "schema": {
      "const": "gv-telemetry-v1"
    },
    "fps": {
      "type": "number",
      "minimum": 1,
      "maximum": 120
    },
    "field_cs": {
      "type": "object",
      "required": ["units", "origin", "axes"],
      "properties": {
        "units": {
          "type": "string",
          "enum": ["m", "yards"]
        },
        "origin": { "type": "string" },
        "axes": { "type": "string" }
      }
    },
    "frames": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["time_s", "players", "ball"],
        "properties": {
          "time_s": { "type": "number" },
          "players": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "team", "x", "y", "vx", "vy", "role"],
              "properties": {
                "id": { "type": "string" },
                "team": { "type": "string", "enum": ["home", "away"] },
                "x": { "type": "number" },
                "y": { "type": "number" },
                "vx": { "type": "number" },
                "vy": { "type": "number" },
                "role": { "type": "string" }
              }
            }
          },
          "ball": {
            "type": "object",
            "required": ["x", "y", "z"],
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" },
              "z": { "type": "number" }
            }
          }
        }
      }
    }
  }
}
